{
  "name": "flowershop-bdd-tests",
  "version": "1.0.0",
  "description": "BDD tests for FlowerShop application",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "bdd:product": "npx cucumber-js features/anetari1/product_validation.feature --require step_definitions/anetari1/product_validation.steps.js",
    "bdd:category": "npx cucumber-js features/anetari1/category_product_limit.feature --require step_definitions/anetari1/category_product_limit.steps.js",
    "bdd:admin": "npx cucumber-js features/anetari1/admin_count_validation.feature --require step_definitions/anetari1/admin_count_validation.steps.js",
    "bdd:contact": "npx cucumber-js features/anetari1/contact_form_validation.feature --require step_definitions/anetari1/contact_form_validation.steps.js"
  },
  "dependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "chai": "^4.3.10",
    "chromedriver": "^136.0.3",
    "selenium-webdriver": "^4.18.1"
  }
}
